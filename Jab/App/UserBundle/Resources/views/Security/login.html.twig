{% extends 'JabToolTemplateBundle:Default/Partials:main.html.twig' %}
{% block title %}LOGIN{% endblock %}


{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

	{% if error %}
	    <div>{{ error|trans }}</div>
	{% endif %}

<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<div class="login-panel panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Sign In</h3>
			</div>
			<div class="panel-body">
				<form role="form" action="{{ path("security-login-check") }}" method="post">
					<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
					<fieldset>
						<div class="form-group">
							<input class="form-control" placeholder="Username or E-mail" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autofocus="" />
						</div>
						<div class="form-group">
							<input class="form-control" placeholder="Password" type="password" id="password" name="_password" required="required" />
						</div>
						<div class="checkbox">
							<label>
								<input type="checkbox" id="remember_me" name="_remember_me" value="on" />Remember Me
							</label>
						</div>
						<input type="submit" class="btn btn-primary pull-right" id="_submit" name="_submit" value="Login" />

					</fieldset>
				</form>
			</div>
		</div>
	</div>
</div>
{% endblock body %}
